<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="editTextStyle">@style/fontEditText</item>

    </style>


<!--    cursor color and hint color-->
    <style name="TextInputLayoutAppearance" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/textColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/textColor</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>

<!--    change the filled box color and the floating label color-->
    <style name="FilledBoxLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">#ECECEC</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

<!--    change edittext font and text size -->
    <style name="fontEditText" parent="@android:style/Widget.EditText">
        <item name="android:textCursorDrawable">@color/textColor</item>
    </style>



</resources>
